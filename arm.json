	"Definicion de un PORT GPIO": {
		"prefix": ".port",
		"body": [
			".equ $1_PORT,    $2"
		],
		"description": "Definicion de un PORT GPIO"
	},
	"Definicion de un PIN GPIO": {
		"prefix": ".pin",
		"body": [
			".equ $1_PIN,     $2"
		],
		"description": "Definicion de un PIN GPIO"
	},
	"Definicion de un BIT GPIO": {
		"prefix": ".bit",
		"body": [
			".equ $1_BIT,     $2"
		],
		"description": "Definicion de un BIT GPIO"
	},
	"Definicion de una MASK GPIO": {
		"prefix": ".mask",
		"body": [
			".equ $1_MASK,    (1 << $1_BIT)"
		],
		"description": "Definicion de una MASK GPIO"
	},
	"Definicion de un GPIO": {
		"prefix": ".gpio_led",
		"body": [
			".equ $1_PORT,    $2",
			".equ $1_PIN,     $3",
			".equ $1_BIT,     $4",
			".equ $1_MASK,    (1 << $1_BIT)",
		],
		"description": "Definicion de un GPIO"
	},
}